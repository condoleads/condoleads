// app/admin/psf-analytics/building-psf-chart.tsx
'use client';

import { useMemo } from 'react';

interface Transaction {
  close_date: string;
  transaction_type: 'sale' | 'lease';
  close_price: number;
  sqft: number;
  psf: number;
  sqft_method: string;
}

interface Props {
  transactions: Transaction[];
  buildingName: string;
}

interface ChartData {
  sales: Transaction[];
  leases: Transaction[];
  minSalePsf: number;
  maxSalePsf: number;
  minLeasePsf: number;
  maxLeasePsf: number;
  minDate: string;
  maxDate: string;
}

export default function BuildingPSFChart({ transactions, buildingName }: Props) {
  const chartData = useMemo((): ChartData => {
    const defaultData: ChartData = {
      sales: [],
      leases: [],
      minSalePsf: 500,
      maxSalePsf: 1500,
      minLeasePsf: 2,
      maxLeasePsf: 10,
      minDate: '',
      maxDate: ''
    };

    if (!transactions || transactions.length === 0) return defaultData;

    const sales = transactions.filter(t => t.transaction_type === 'sale');
    const leases = transactions.filter(t => t.transaction_type === 'lease');

    const salePsfs = sales.map(t => t.psf).filter(p => p > 0);
    const leasePsfs = leases.map(t => t.psf).filter(p => p > 0);
    
    const minSalePsf = salePsfs.length > 0 ? Math.floor(Math.min(...salePsfs) * 0.9) : 500;
    const maxSalePsf = salePsfs.length > 0 ? Math.ceil(Math.max(...salePsfs) * 1.1) : 1500;

    const minLeasePsf = leasePsfs.length > 0 ? Math.floor(Math.min(...leasePsfs) * 0.9) : 2;
    const maxLeasePsf = leasePsfs.length > 0 ? Math.ceil(Math.max(...leasePsfs) * 1.1) : 10;

    const dates = transactions.map(t => t.close_date).sort();
    const minDate = dates[0] || '';
    const maxDate = dates[dates.length - 1] || '';

    return { 
      sales, 
      leases, 
      minSalePsf, 
      maxSalePsf, 
      minLeasePsf, 
      maxLeasePsf, 
      minDate, 
      maxDate 
    };
  }, [transactions]);

  if (!transactions || transactions.length === 0) {
    return (
      <div className="h-64 flex items-center justify-center text-gray-500 bg-gray-50 rounded-lg">
        No transaction data available
      </div>
    );
  }

  const chartWidth = 700;
  const chartHeight = 250;
  const padding = { top: 20, right: 20, bottom: 40, left: 60 };
  const plotWidth = chartWidth - padding.left - padding.right;
  const plotHeight = chartHeight - padding.top - padding.bottom;

  const dateToX = (dateStr: string) => {
    const date = new Date(dateStr);
    const minDate = new Date(chartData.minDate);
    const maxDate = new Date(chartData.maxDate);
    const range = maxDate.getTime() - minDate.getTime() || 1;
    return padding.left + ((date.getTime() - minDate.getTime()) / range) * plotWidth;
  };

  const psfToY = (psf: number, min: number, max: number) => {
    const range = max - min || 1;
    return padding.top + plotHeight - ((psf - min) / range) * plotHeight;
  };

  const saleYTicks = useMemo(() => {
    const range = chartData.maxSalePsf - chartData.minSalePsf;
    const step = Math.ceil(range / 5 / 100) * 100 || 100;
    const ticks: number[] = [];
    for (let v = Math.floor(chartData.minSalePsf / step) * step; v <= chartData.maxSalePsf; v += step) {
      if (v >= chartData.minSalePsf) ticks.push(v);
    }
    return ticks.slice(0, 6);
  }, [chartData.minSalePsf, chartData.maxSalePsf]);

  const xTicks = useMemo(() => {
    if (!chartData.minDate || !chartData.maxDate) return [];
    const start = new Date(chartData.minDate);
    const end = new Date(chartData.maxDate);
    const ticks: Date[] = [];
    const current = new Date(start.getFullYear(), start.getMonth(), 1);
    
    while (current <= end) {
      ticks.push(new Date(current));
      current.setMonth(current.getMonth() + 3);
    }
    return ticks.slice(0, 8);
  }, [chartData.minDate, chartData.maxDate]);

  const avgSalePsf = chartData.sales.length > 0 
    ? chartData.sales.reduce((sum, t) => sum + t.psf, 0) / chartData.sales.length 
    : null;

  return (
    <div className="space-y-4">
      {chartData.sales.length > 0 && (
        <div className="bg-white border rounded-lg p-4">
          <div className="flex items-center justify-between mb-2">
            <h4 className="font-medium text-blue-700">Sale Transactions ({chartData.sales.length})</h4>
            {avgSalePsf && (
              <span className="text-sm text-gray-500">
                Avg: <span className="font-semibold text-blue-600">${avgSalePsf.toFixed(0)}/sqft</span>
              </span>
            )}
          </div>
          <svg width={chartWidth} height={chartHeight} className="overflow-visible">
            {saleYTicks.map((tick, i) => (
              <g key={i}>
                <line
                  x1={padding.left}
                  y1={psfToY(tick, chartData.minSalePsf, chartData.maxSalePsf)}
                  x2={chartWidth - padding.right}
                  y2={psfToY(tick, chartData.minSalePsf, chartData.maxSalePsf)}
                  stroke="#e5e7eb"
                  strokeDasharray="4,4"
                />
                <text
                  x={padding.left - 10}
                  y={psfToY(tick, chartData.minSalePsf, chartData.maxSalePsf)}
                  textAnchor="end"
                  alignmentBaseline="middle"
                  className="text-xs fill-gray-500"
                >
                  ${tick}
                </text>
              </g>
            ))}

            {xTicks.map((date, i) => (
              <text
                key={i}
                x={dateToX(date.toISOString().split('T')[0])}
                y={chartHeight - 10}
                textAnchor="middle"
                className="text-xs fill-gray-500"
              >
                {date.toLocaleDateString('en-US', { month: 'short', year: '2-digit' })}
              </text>
            ))}

            {avgSalePsf && (
              <line
                x1={padding.left}
                y1={psfToY(avgSalePsf, chartData.minSalePsf, chartData.maxSalePsf)}
                x2={chartWidth - padding.right}
                y2={psfToY(avgSalePsf, chartData.minSalePsf, chartData.maxSalePsf)}
                stroke="#3b82f6"
                strokeWidth={2}
                strokeDasharray="8,4"
                opacity={0.7}
              />
            )}

            {chartData.sales.map((t, i) => (
              <g key={i}>
                <circle
                  cx={dateToX(t.close_date)}
                  cy={psfToY(t.psf, chartData.minSalePsf, chartData.maxSalePsf)}
                  r={6}
                  fill={t.sqft_method === 'exact' ? '#22c55e' : t.sqft_method === 'midpoint' ? '#eab308' : '#ef4444'}
                  stroke="#fff"
                  strokeWidth={2}
                  className="cursor-pointer"
                >
                  <title>{`${t.close_date}\nPrice: $${t.close_price?.toLocaleString()}\nSqFt: ${t.sqft} (${t.sqft_method})\nPSF: $${t.psf?.toFixed(2)}`}</title>
                </circle>
              </g>
            ))}

            <text
              x={15}
              y={chartHeight / 2}
              transform={`rotate(-90, 15, ${chartHeight / 2})`}
              textAnchor="middle"
              className="text-xs fill-gray-500"
            >
              Price per SqFt ($)
            </text>
          </svg>
          
          <div className="flex gap-4 mt-2 text-xs">
            <div className="flex items-center gap-1">
              <span className="w-3 h-3 rounded-full bg-green-500"></span>
              <span>Exact SqFt</span>
            </div>
            <div className="flex items-center gap-1">
              <span className="w-3 h-3 rounded-full bg-yellow-500"></span>
              <span>Midpoint</span>
            </div>
            <div className="flex items-center gap-1">
              <span className="w-3 h-3 rounded-full bg-red-500"></span>
              <span>Fallback</span>
            </div>
            <div className="flex items-center gap-1 ml-4">
              <span className="w-6 h-0.5 bg-blue-500" style={{borderTop: '2px dashed #3b82f6'}}></span>
              <span>Average</span>
            </div>
          </div>
        </div>
      )}

      {chartData.leases.length > 0 && (
        <div className="bg-white border rounded-lg p-4">
          <div className="flex items-center justify-between mb-2">
            <h4 className="font-medium text-green-700">Lease Transactions ({chartData.leases.length})</h4>
            <span className="text-sm text-gray-500">
              Avg: <span className="font-semibold text-green-600">
                ${(chartData.leases.reduce((sum, t) => sum + t.psf, 0) / chartData.leases.length).toFixed(2)}/sqft/mo
              </span>
            </span>
          </div>
          <svg width={chartWidth} height={200} className="overflow-visible">
            {[chartData.minLeasePsf, (chartData.minLeasePsf + chartData.maxLeasePsf) / 2, chartData.maxLeasePsf].map((tick, i) => (
              <g key={i}>
                <line
                  x1={padding.left}
                  y1={padding.top + (160 - padding.top) - ((tick - chartData.minLeasePsf) / (chartData.maxLeasePsf - chartData.minLeasePsf || 1)) * (160 - padding.top - 20)}
                  x2={chartWidth - padding.right}
                  y2={padding.top + (160 - padding.top) - ((tick - chartData.minLeasePsf) / (chartData.maxLeasePsf - chartData.minLeasePsf || 1)) * (160 - padding.top - 20)}
                  stroke="#e5e7eb"
                  strokeDasharray="4,4"
                />
                <text
                  x={padding.left - 10}
                  y={padding.top + (160 - padding.top) - ((tick - chartData.minLeasePsf) / (chartData.maxLeasePsf - chartData.minLeasePsf || 1)) * (160 - padding.top - 20)}
                  textAnchor="end"
                  alignmentBaseline="middle"
                  className="text-xs fill-gray-500"
                >
                  ${tick.toFixed(1)}
                </text>
              </g>
            ))}

            {chartData.leases.map((t, i) => {
              const yPos = padding.top + (160 - padding.top) - ((t.psf - chartData.minLeasePsf) / (chartData.maxLeasePsf - chartData.minLeasePsf || 1)) * (160 - padding.top - 20);
              return (
                <circle
                  key={i}
                  cx={dateToX(t.close_date)}
                  cy={yPos}
                  r={5}
                  fill={t.sqft_method === 'exact' ? '#22c55e' : t.sqft_method === 'midpoint' ? '#eab308' : '#ef4444'}
                  stroke="#fff"
                  strokeWidth={2}
                  className="cursor-pointer"
                >
                  <title>{`${t.close_date}\nRent: $${t.close_price?.toLocaleString()}/mo\nSqFt: ${t.sqft} (${t.sqft_method})\nPSF: $${t.psf?.toFixed(2)}/mo`}</title>
                </circle>
              );
            })}

            {xTicks.map((date, i) => (
              <text
                key={i}
                x={dateToX(date.toISOString().split('T')[0])}
                y={185}
                textAnchor="middle"
                className="text-xs fill-gray-500"
              >
                {date.toLocaleDateString('en-US', { month: 'short', year: '2-digit' })}
              </text>
            ))}
          </svg>
        </div>
      )}
    </div>
  );
}
