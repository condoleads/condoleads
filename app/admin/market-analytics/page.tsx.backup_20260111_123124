// app/admin/market-analytics/page.tsx
'use client'

import { useState, useEffect } from 'react'

interface Adjustment {
  id: string
  area_id: string | null
  municipality_id: string | null
  community_id: string | null
  building_id: string | null
  parking_value_lease: number | null
  locker_value_lease: number | null
  parking_value_sale: number | null
  locker_value_sale: number | null
  parking_lease_calculated: number | null
  parking_lease_count: number | null
  parking_lease_calculated_at: string | null
  locker_lease_calculated: number | null
  locker_lease_count: number | null
  locker_lease_calculated_at: string | null
  parking_sale_weighted_avg: number | null
  parking_sale_simple_avg: number | null
  parking_sale_count: number | null
  parking_sale_sample_size: number | null
  parking_sale_buildings: number | null
  parking_sale_records: number | null
  parking_sale_calculated_at: string | null
  locker_sale_calculated: number | null
  locker_sale_count: number | null
  locker_sale_calculated_at: string | null
  treb_areas: { name: string } | null
  municipalities: { name: string; code: string } | null
  communities: { name: string } | null
  buildings: { building_name: string } | null
}

interface GeoSyncResult {
  success: boolean
  results?: {
    proptx: { areas: number; municipalities: number; communities: number }
    dbBefore: { areas: number; municipalities: number; communities: number }
    dbAfter: { areas: number; municipalities: number; communities: number }
    inserted: { areas: number; municipalities: number; communities: number }
    errors: string[]
  }
  error?: string
}

interface GeoCounts {
  areas: number
  municipalities: number
  communities: number
}

export default function MarketAnalyticsPage() {
  const [adjustments, setAdjustments] = useState<Adjustment[]>([])
  const [loading, setLoading] = useState(true)
  const [calculating, setCalculating] = useState(false)
  const [syncingGeo, setSyncingGeo] = useState(false)
  const [lastResult, setLastResult] = useState<any>(null)
  const [geoResult, setGeoResult] = useState<GeoSyncResult | null>(null)
  const [geoCounts, setGeoCounts] = useState<GeoCounts | null>(null)
  const [activeTab, setActiveTab] = useState<'overview' | 'areas' | 'municipalities' | 'communities' | 'buildings'>('overview')
  const [syncingParkingSale, setSyncingParkingSale] = useState(false)
  const [parkingSaleResult, setParkingSaleResult] = useState<any>(null)

  const fetchData = async () => {
    setLoading(true)
    try {
      const res = await fetch('/api/admin/market-analytics/calculate')
      const data = await res.json()
      if (data.success) {
        setAdjustments(data.adjustments || [])
      }
    } catch (error) {
      console.error('Error fetching:', error)
    } finally {
      setLoading(false)
    }
  }

  const fetchGeoCounts = async () => {
    try {
      const res = await fetch('/api/admin/geography/sync')
      const data = await res.json()
      if (data.success) {
        setGeoCounts(data.counts)
      }
    } catch (error) {
      console.error('Error fetching geo counts:', error)
    }
  }

  useEffect(() => {
    fetchData()
    fetchGeoCounts()
  }, [])

  const handleCalculate = async (type: string) => {
    setCalculating(true)
    setLastResult(null)
    try {
      const res = await fetch('/api/admin/market-analytics/calculate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ type, maxRecords: 50000, minRecords: 10 })
      })
      const data = await res.json()
      setLastResult(data)
      if (data.success) {
        fetchData()
      }
    } catch (error) {
      setLastResult({ success: false, error: String(error) })
    } finally {
      setCalculating(false)
    }
  }

const handleParkingSaleSync = async (level: string) => {
    setSyncingParkingSale(true)
    setParkingSaleResult(null)
    try {
      const res = await fetch('/api/admin/market-analytics/parking-sale', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ level })
      })
      const data = await res.json()
      setParkingSaleResult(data)
      if (data.success) {
        fetchData()
      }
    } catch (error) {
      setParkingSaleResult({ success: false, error: String(error) })
    } finally {
      setSyncingParkingSale(false)
    }
  }

  const handleGeoSync = async () => {
    setSyncingGeo(true)
    setGeoResult(null)
    try {
      const res = await fetch('/api/admin/geography/sync', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
      const data = await res.json()
      setGeoResult(data)
      if (data.success) {
        fetchGeoCounts()
      }
    } catch (error) {
      setGeoResult({ success: false, error: String(error) })
    } finally {
      setSyncingGeo(false)
    }
  }

  const getLevel = (adj: Adjustment): string => {
    if (adj.building_id) return 'building'
    if (adj.community_id) return 'community'
    if (adj.municipality_id) return 'municipality'
    if (adj.area_id) return 'area'
    return 'generic'
  }

  const getName = (adj: Adjustment): string => {
    if (adj.buildings?.building_name) return adj.buildings.building_name
    if (adj.communities?.name) return adj.communities.name
    if (adj.municipalities?.name) return `${adj.municipalities.code || ''} - ${adj.municipalities.name}`
    if (adj.treb_areas?.name) return adj.treb_areas.name
    return 'Generic Default'
  }

  const getLevelBadge = (level: string) => {
    const colors: Record<string, string> = {
      building: 'bg-purple-100 text-purple-800',
      community: 'bg-green-100 text-green-800',
      municipality: 'bg-yellow-100 text-yellow-800',
      area: 'bg-indigo-100 text-indigo-800',
      generic: 'bg-gray-100 text-gray-800'
    }
    return colors[level] || colors.generic
  }

  const formatValue = (manual: number | null, calculated: number | null, isMonthly: boolean) => {
    const value = manual ?? calculated
    if (value === null || value === undefined) return <span className="text-gray-400">—</span>
    const formatted = isMonthly ? `$${value}/mo` : `$${value.toLocaleString()}`
    const isManual = manual !== null
    return (
      <span className={isManual ? 'text-blue-600 font-semibold' : ''}>
        {formatted}
        {isManual && <span className="text-xs ml-1">(M)</span>}
      </span>
    )
  }

  const formatDate = (date: string | null) => {
    if (!date) return ''
    return new Date(date).toLocaleDateString('en-CA', { 
      month: 'short', 
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    })
  }

  const filterByLevel = (level: string) => {
    if (level === 'areas') return adjustments.filter(adj => getLevel(adj) === 'area')
    if (level === 'municipalities') return adjustments.filter(adj => getLevel(adj) === 'municipality')
    if (level === 'communities') return adjustments.filter(adj => getLevel(adj) === 'community')
    if (level === 'buildings') return adjustments.filter(adj => getLevel(adj) === 'building')
    return adjustments
  }

  const stats = {
    areas: adjustments.filter(a => getLevel(a) === 'area').length,
    municipalities: adjustments.filter(a => getLevel(a) === 'municipality').length,
    communities: adjustments.filter(a => getLevel(a) === 'community').length,
    buildings: adjustments.filter(a => getLevel(a) === 'building').length,
    withParkingLease: adjustments.filter(a => a.parking_lease_calculated !== null).length,
    withParkingSale: adjustments.filter(a => a.parking_sale_weighted_avg !== null).length
  }

  if (loading) {
    return (
      <div className="p-8 flex items-center justify-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
        <span className="ml-3">Loading market analytics...</span>
      </div>
    )
  }

  return (
    <div className="p-8 space-y-6">
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-2xl font-bold text-gray-900">Market Analytics</h1>
          <p className="text-sm text-gray-500">Auto-calculated parking & locker values from MLS data</p>
        </div>
      </div>

      {/* Geography Sync Section */}
      <div className="bg-white rounded-xl shadow-sm border p-6">
        <h2 className="text-lg font-semibold mb-4">Step 1: Geographic Hierarchy</h2>
        <p className="text-sm text-gray-500 mb-4">Sync all Areas, Municipalities, and Communities from PropTx TREB data</p>
        
        {geoCounts && (
          <div className="grid grid-cols-3 gap-4 mb-4">
            <div className="bg-indigo-50 rounded-lg p-3">
              <p className="text-xs text-indigo-600 font-medium">Areas</p>
              <p className="text-xl font-bold text-indigo-800">{geoCounts.areas}</p>
            </div>
            <div className="bg-yellow-50 rounded-lg p-3">
              <p className="text-xs text-yellow-600 font-medium">Municipalities</p>
              <p className="text-xl font-bold text-yellow-800">{geoCounts.municipalities}</p>
            </div>
            <div className="bg-green-50 rounded-lg p-3">
              <p className="text-xs text-green-600 font-medium">Communities</p>
              <p className="text-xl font-bold text-green-800">{geoCounts.communities}</p>
            </div>
          </div>
        )}

        <button
          onClick={handleGeoSync}
          disabled={syncingGeo}
          className="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg disabled:opacity-50 flex items-center gap-2"
        >
          {syncingGeo && <div className="animate-spin h-4 w-4 border-2 border-white border-t-transparent rounded-full" />}
          {syncingGeo ? 'Syncing Geography...' : 'Sync All Geography from PropTx'}
        </button>

        {geoResult && (
          <div className={`mt-4 p-4 rounded-lg ${geoResult.success ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200'}`}>
            {geoResult.success && geoResult.results ? (
              <div className="text-green-800">
                <p className="font-semibold"> Geography Sync Complete</p>
                <div className="text-sm mt-2 grid grid-cols-3 gap-4">
                  <div>
                    <p className="font-medium">PropTx Has:</p>
                    <p>Areas: {geoResult.results.proptx.areas}</p>
                    <p>Municipalities: {geoResult.results.proptx.municipalities}</p>
                    <p>Communities: {geoResult.results.proptx.communities}</p>
                  </div>
                  <div>
                    <p className="font-medium">Inserted:</p>
                    <p>Areas: {geoResult.results.inserted.areas}</p>
                    <p>Municipalities: {geoResult.results.inserted.municipalities}</p>
                    <p>Communities: {geoResult.results.inserted.communities}</p>
                  </div>
                  <div>
                    <p className="font-medium">DB Now Has:</p>
                    <p>Areas: {geoResult.results.dbAfter.areas}</p>
                    <p>Municipalities: {geoResult.results.dbAfter.municipalities}</p>
                    <p>Communities: {geoResult.results.dbAfter.communities}</p>
                  </div>
                </div>
                {geoResult.results.errors.length > 0 && (
                  <div className="mt-2 text-xs text-orange-600">
                    <p>Errors ({geoResult.results.errors.length}): {geoResult.results.errors.slice(0,3).join(', ')}</p>
                  </div>
                )}
              </div>
            ) : (
              <p className="text-red-800">Error: {geoResult.error}</p>
            )}
          </div>
        )}
      </div>

      {/* Calculate Values Section */}
      <div className="bg-white rounded-xl shadow-sm border p-6">
        <h2 className="text-lg font-semibold mb-4">Step 2: Calculate Market Values</h2>
        <p className="text-sm text-gray-500 mb-4">Calculate parking & locker averages from PropTx lease/sale data</p>
        
        <div className="flex flex-wrap gap-3">
          <button
            onClick={() => handleCalculate('parking_lease')}
            disabled={calculating}
            className="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg disabled:opacity-50 flex items-center gap-2"
          >
            {calculating && <div className="animate-spin h-4 w-4 border-2 border-white border-t-transparent rounded-full" />}
            Calculate Parking (Lease)
          </button>
          <button disabled className="px-4 py-2 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed">
            Locker (Lease) - Coming Soon
          </button>
          <div className="flex flex-col gap-3">
            <div>
              <span className="text-xs text-gray-500 font-medium">Parking (Sale) - Approach 1 (Fast - City Query):</span>
              <div className="flex flex-wrap gap-2 mt-1">
                <button
                  onClick={() => handleParkingSaleSync('areas')}
                  disabled={syncingParkingSale}
                  className="px-3 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm rounded-lg disabled:opacity-50 flex items-center gap-2"
                >
                  {syncingParkingSale && <div className="animate-spin h-3 w-3 border-2 border-white border-t-transparent rounded-full" />}
                  Areas (73)
                </button>
                <button
                  onClick={() => handleParkingSaleSync('municipalities')}
                  disabled={syncingParkingSale}
                  className="px-3 py-2 bg-yellow-600 hover:bg-yellow-700 text-white text-sm rounded-lg disabled:opacity-50 flex items-center gap-2"
                >
                  {syncingParkingSale && <div className="animate-spin h-3 w-3 border-2 border-white border-t-transparent rounded-full" />}
                  Municipalities (506)
                </button>
                <button
                  onClick={() => handleParkingSaleSync('communities')}
                  disabled={syncingParkingSale}
                  className="px-3 py-2 bg-green-600 hover:bg-green-700 text-white text-sm rounded-lg disabled:opacity-50 flex items-center gap-2"
                >
                  {syncingParkingSale && <div className="animate-spin h-3 w-3 border-2 border-white border-t-transparent rounded-full" />}
                  Communities (1948)
                </button>
              </div>
            </div>
            <div>
              <span className="text-xs text-gray-500 font-medium">Parking (Sale) - Approach 2 (Thorough - Per Building Query):</span>
              <div className="flex flex-wrap gap-2 mt-1">
                <button
                  onClick={() => handleParkingSaleSync('municipalities_v2')}
                  disabled={syncingParkingSale}
                  className="px-3 py-2 bg-orange-600 hover:bg-orange-700 text-white text-sm rounded-lg disabled:opacity-50 flex items-center gap-2"
                >
                  {syncingParkingSale && <div className="animate-spin h-3 w-3 border-2 border-white border-t-transparent rounded-full" />}
                  Municipalities v2 (Slow)
                </button>
                <button
                  onClick={() => handleParkingSaleSync('communities_v2')}
                  disabled={syncingParkingSale}
                  className="px-3 py-2 bg-teal-600 hover:bg-teal-700 text-white text-sm rounded-lg disabled:opacity-50 flex items-center gap-2"
                >
                  {syncingParkingSale && <div className="animate-spin h-3 w-3 border-2 border-white border-t-transparent rounded-full" />}
                  Communities v2 (Slow)
                </button>
              </div>
            </div>
            <div>
              <span className="text-xs text-gray-500 font-medium">Parking (Sale) - Buildings:</span>
              <div className="flex flex-wrap gap-2 mt-1">
                <button
                  onClick={() => handleParkingSaleSync('buildings')}
                  disabled={syncingParkingSale}
                  className="px-3 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm rounded-lg disabled:opacity-50 flex items-center gap-2"
                >
                  {syncingParkingSale && <div className="animate-spin h-3 w-3 border-2 border-white border-t-transparent rounded-full" />}
                  Buildings
                </button>
              </div>
            </div>
          </div>
          <button disabled className="px-4 py-2 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed">
            Locker (Sale) - Coming Soon
          </button>
        </div>
       
        {parkingSaleResult && (
          <div className={`mt-4 p-4 rounded-lg ${parkingSaleResult.success ? 'bg-emerald-50 border border-emerald-200' : 'bg-red-50 border border-red-200'}`}>
            {parkingSaleResult.success ? (
              <div className="text-emerald-800">
                <p className="font-semibold">✓ Parking Sale Calculation Complete</p>
                <p className="text-sm mt-1">
                  Areas: {parkingSaleResult.summary?.areas || 0} | 
                  Municipalities: {parkingSaleResult.summary?.municipalities || 0} | 
                  Communities: {parkingSaleResult.summary?.communities || 0}
                </p>
              </div>
            ) : (
              <p className="text-red-800">Error: {parkingSaleResult.error}</p>
            )}
          </div>
        )}

        {lastResult && (
          <div className={`mt-4 p-4 rounded-lg ${lastResult.success ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200'}`}>
            {lastResult.success ? (
              <div className="text-green-800">
                <p className="font-semibold"> Calculation Complete</p>
                <p className="text-sm mt-1">
                  Processed {lastResult.totalRecords?.toLocaleString()} records | 
                  Saved: {lastResult.saved?.areas} areas, {lastResult.saved?.municipalities} municipalities, {lastResult.saved?.communities} communities
                </p>
                {lastResult.saved?.errors?.length > 0 && (
                  <p className="text-xs text-orange-600 mt-1">Errors: {lastResult.saved.errors.slice(0,3).join(', ')}</p>
                )}
              </div>
            ) : (
              <p className="text-red-800">Error: {lastResult.error}</p>
            )}
          </div>
        )}
      </div>

      {/* Stats Cards */}
      <div className="grid grid-cols-2 md:grid-cols-5 gap-4">
        <div className="bg-white rounded-xl shadow-sm border p-4">
          <p className="text-sm text-gray-500">Areas</p>
          <p className="text-2xl font-bold text-indigo-600">{stats.areas}</p>
        </div>
        <div className="bg-white rounded-xl shadow-sm border p-4">
          <p className="text-sm text-gray-500">Municipalities</p>
          <p className="text-2xl font-bold text-yellow-600">{stats.municipalities}</p>
        </div>
        <div className="bg-white rounded-xl shadow-sm border p-4">
          <p className="text-sm text-gray-500">Communities</p>
          <p className="text-2xl font-bold text-green-600">{stats.communities}</p>
        </div>
        <div className="bg-white rounded-xl shadow-sm border p-4">
          <p className="text-sm text-gray-500">Buildings</p>
          <p className="text-2xl font-bold text-purple-600">{stats.buildings}</p>
        </div>
        <div className="bg-white rounded-xl shadow-sm border p-4">
          <p className="text-sm text-gray-500">With Parking Lease</p>
          <p className="text-2xl font-bold text-blue-600">{stats.withParkingLease}</p>
        </div>
        <div className="bg-white rounded-xl shadow-sm border p-4">
          <p className="text-sm text-gray-500">With Parking Sale</p>
          <p className="text-2xl font-bold text-emerald-600">{stats.withParkingSale}</p>
        </div>
      </div>

      {/* Tabs */}
      <div className="border-b border-gray-200">
        <nav className="flex gap-4">
          {(['overview', 'areas', 'municipalities', 'communities', 'buildings'] as const).map(tab => (
            <button
              key={tab}
              onClick={() => setActiveTab(tab)}
              className={`py-2 px-1 border-b-2 text-sm font-medium capitalize ${
                activeTab === tab 
                  ? 'border-blue-600 text-blue-600' 
                  : 'border-transparent text-gray-500 hover:text-gray-700'
              }`}
            >
              {tab}
            </button>
          ))}
        </nav>
      </div>

      {/* Legend */}
      <div className="flex items-center gap-4 text-xs text-gray-500">
        <span><span className="text-blue-600 font-semibold">(M)</span> = Manual Override</span>
        <span>Regular = Auto-Calculated</span>
        <span className="text-gray-400"> = No Value</span>
      </div>

      {/* Table */}
      <div className="bg-white rounded-xl shadow-sm border overflow-x-auto">
        <table className="min-w-full divide-y divide-gray-200 text-sm">
          <thead className="bg-gray-50">
            <tr>
              <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Level</th>
              <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Name</th>
              <th className="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Parking (Lease)</th>
              <th className="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Records</th>
              <th className="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Locker (Lease)</th>
              <th className="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Parking (Sale)</th>
              <th className="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Sale Records</th>
              <th className="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Locker (Sale)</th>
              <th className="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Last Calculated</th>
            </tr>
          </thead>
          <tbody className="divide-y divide-gray-200">
            {filterByLevel(activeTab)
              .sort((a, b) => {
                const order = ['area', 'municipality', 'community', 'building', 'generic']
                return order.indexOf(getLevel(a)) - order.indexOf(getLevel(b))
              })
              .map(adj => (
                <tr key={adj.id} className="hover:bg-gray-50">
                  <td className="px-4 py-3">
                    <span className={`px-2 py-1 text-xs rounded font-medium capitalize ${getLevelBadge(getLevel(adj))}`}>
                      {getLevel(adj)}
                    </span>
                  </td>
                  <td className="px-4 py-3 font-medium text-gray-900">{getName(adj)}</td>
                  <td className="px-4 py-3 text-right font-mono">
                    {formatValue(adj.parking_value_lease, adj.parking_lease_calculated, true)}
                  </td>
                  <td className="px-4 py-3 text-right text-gray-500">
                    {adj.parking_lease_count ?? ''}
                  </td>
                  <td className="px-4 py-3 text-right font-mono">
                    {formatValue(adj.locker_value_lease, adj.locker_lease_calculated, true)}
                  </td>
                  <td className="px-4 py-3 text-right font-mono">
                    {formatValue(adj.parking_value_sale, adj.parking_sale_weighted_avg, false)}
                  </td>
                  <td className="px-4 py-3 text-right text-gray-500">
                    {adj.parking_sale_records ?? '—'}
                  </td>
                  <td className="px-4 py-3 text-right font-mono">
                    {formatValue(adj.locker_value_sale, adj.locker_sale_calculated, false)}
                  </td>
                  <td className="px-4 py-3 text-right text-gray-500 text-xs">
                    {formatDate(adj.parking_lease_calculated_at)}
                  </td>
                </tr>
              ))}
          </tbody>
        </table>

        {adjustments.length === 0 && (
          <div className="p-8 text-center text-gray-500">
            No adjustments found. Run "Sync Geography" first, then "Calculate Parking (Lease)".
          </div>
        )}
      </div>
    </div>
  )
}
